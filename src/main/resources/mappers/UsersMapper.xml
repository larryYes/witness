<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wdf.witness.dao.UsersDao">
    <select id="findAll" resultType="com.wdf.witness.entity.Users">
        select uid,`name`,password,mail,url from users
    </select>

    <select id="findById" resultType="com.wdf.witness.entity.Users">
        select uid,`name`,password,mail,url from users where uid=#{uid};
    </select>

    <insert id="addUser" parameterType="com.wdf.witness.entity.Users">
        insert into users(uid,`name`,password,mail,url)
        values (#{id},#{name},#{password},#{mail},#{url})
    </insert>

    <update id="updateUser" parameterType="com.wdf.witness.entity.Users">
        update users
        <set>
            <if test="name != null">`name` = #{name}, </if>
            <if test="password != null">`password` = #{password}, </if>
        </set>
        where id = #{id}
    </update>

    <delete id="removeUser">
		delete from users where uid = #{value}
	</delete>

</mapper>
